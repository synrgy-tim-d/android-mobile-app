<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".auth.view.DetailActivity">

    <ScrollView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:padding="@dimen/_20sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/dummy_rekomendasi_kos1"
                android:id="@+id/img_kos_detail"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_186sdp"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textSize="18dp"
                android:text="Nama Produk"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/tv_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="4dp"
                android:ellipsize="marquee"
                android:textSize="12dp"
                android:text="Alamat"
                android:layout_marginHorizontal="5dp"
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="7dp"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@drawable/star"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_rate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/loc" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:id="@+id/tv_loc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:text="Kota"
                    android:singleLine="true" />

            </LinearLayout>
            <LinearLayout
                android:gravity="end"
                android:layout_marginHorizontal="5dp"
                android:layout_marginTop="7dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:layout_marginRight="3dp"
                    android:padding="5dp"
                    android:background="@drawable/bg_button_outline_blue_rounded"
                    android:id="@+id/btn_save"
                    android:drawablePadding="2dp"
                    android:textAllCaps="false"
                    android:drawableStart="@drawable/ic_baseline_favorite_border_24"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Simpan"/>

                <Button
                    android:padding="5dp"
                    android:background="@drawable/bg_button_outline_blue_rounded"
                    android:drawablePadding="2dp"
                    android:drawableStart="@drawable/ic_baseline_share_24"
                    android:textAllCaps="false"
                    android:id="@+id/btn_share"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:text="Bagikan"/>

            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_profile"
                    android:src="@drawable/dummy_photo_profil"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"/>

                <LinearLayout
                    android:layout_marginLeft="10dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/black"
                        android:textSize="16dp"
                        android:id="@+id/tv_nama_pemilik"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nama Pemilik Kos"/>

                    <TextView
                        android:id="@+id/tv_nama_kos"
                        android:text="Pemilik Kos Alamanda"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                    <Button
                        android:drawablePadding="2dp"
                        android:drawableStart="@drawable/ic_baseline_call_24"
                        android:padding="5dp"
                        android:background="@drawable/bg_button_outline_blue_rounded"
                        android:id="@+id/btn_wa"
                        android:layout_width="wrap_content"
                        android:layout_height="45dp"
                        android:text="0812-3456-7891"/>

                </LinearLayout>

            </LinearLayout>
            <TextView
                android:textColor="@color/black"
                android:id="@+id/tv_faq"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FAQ"/>
            <TextView
                android:id="@+id/tv_q1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 1"/>
            <TextView
                android:id="@+id/tv_a1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban 1"/>
            <TextView
                android:id="@+id/tv_q2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 2"/>
            <TextView
                android:id="@+id/tv_a2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban 2"/>
            <TextView
                android:id="@+id/tv_q3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pertanyaan 3"/>
            <TextView
                android:id="@+id/tv_a3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jawaban 3"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fasilitas Kamar"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_fasilitas_kamar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Peraturan Kos"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_peraturan_kos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_desc"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Kos"/>
            <TextView
                android:id="@+id/tv_desc_kos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Isi Deskripsi Kos"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:textSize="20dp"
                android:id="@+id/tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review Kos"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:textColor="@color/black"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_tipe_lain"
                android:textSize="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipe Kamar Lain dari Kos ini"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_tipe_lain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/nv_bottom"
        android:padding="10dp"
        android:background="@color/bluePrimary"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:textColor="@color/white"
            android:text="Rp.1000.000/bulan"
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:textColor="@color/bluePrimary"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_sewa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ajukan Sewa"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>