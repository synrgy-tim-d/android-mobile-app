<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.LoginActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tl_login"
        android:background="#0A008A"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_arrow_small_left_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"/>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/tl_login"
        android:id="@+id/line_up"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_applogo"
            android:layout_width="171dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_applogo_login_blue"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <EditText
            android:id="@+id/et_email_login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dip"
            android:background="@drawable/bg_textfield_rounded"
            android:hint="Ketikkan Alamat Email"
            android:inputType="textEmailAddress" />

        <TextView
            android:id="@+id/tv_password_login"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <com.google.android.material.textfield.TextInputLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/etPasswordLayout"
            android:background="@drawable/bg_button_white_rounded"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_password_login"
                android:background="@drawable/bg_textfield_rounded"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Minimal 6 karakter"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_masuk_akun_login"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:text="Masuk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_rounded"/>

        <TextView
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="atau"/>

        <Button
            android:drawableStart="@drawable/ic_logo_google"
            android:id="@+id/btn_masuk_akun_google"
            android:layout_marginTop="32dp"
            android:textAllCaps="false"
            android:text="Masuk dengan Google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_white_rounded"/>

        <TextView
            android:layout_marginTop="24dp"
            android:layout_gravity="center"
            android:id="@+id/tv_daftar"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Belum punya akun? Daftar"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>