<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".auth.view.RegisterActivity">

    <include
        android:id="@+id/layoutToolbar"
        layout="@layout/layout_toolbar_main"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:padding="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutToolbar"
        android:id="@+id/line_up"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_applogo"
            android:layout_width="171dp"
            android:layout_height="90dp"
            android:src="@drawable/ic_applogo_login_blue"/>

        <TextView
            android:id="@+id/tv_fullname"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Lengkap"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/et_fullname"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/bg_textfield_rounded"
            android:hint="Ketikkan nama lengkapmu disini"
            android:inputType="textNoSuggestions" />

        <TextView
            android:id="@+id/tv_phone"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Handphone"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/bg_textfield_rounded"
            android:hint="Isi nomor handphone Whatsapp aktif"
            android:inputType="textNoSuggestions"/>

        <TextView
            android:id="@+id/tv_email"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"/>

        <EditText
            android:layout_marginTop="5dp"
            android:id="@+id/et_email_register"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:padding="10dp"
            android:background="@drawable/bg_textfield_rounded"
            android:hint="Ketikan alamat email"
            android:inputType="textNoSuggestions" />

        <TextView
            android:id="@+id/tv_password_login"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_marginTop="5dp"
            android:padding="10dp"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/etPasswordLayout"
            android:background="@drawable/bg_textfield_rounded"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:textColorHint="@drawable/hint_focus"
            app:passwordToggleEnabled="true">

            <com.google.android.material.textfield.TextInputEditText
                android:padding="5dp"
                android:id="@+id/et_password_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:textColorHint="@drawable/hint_focus"
                android:hint="Minimal 6 karakter"
                android:inputType="textPassword"/>

        </com.google.android.material.textfield.TextInputLayout>

    </LinearLayout>

    <LinearLayout
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_daftar_akun"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:text="Daftarkan Akun"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_button_rounded"/>

        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_or"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="atau"/>

        <Button
            android:padding="20dp"
            android:gravity="center"
            android:drawableStart="@drawable/ic_logo_google"
            android:id="@+id/btn_daftar_akun_google"
            android:layout_marginTop="10dp"
            android:textAllCaps="false"
            android:text="Daftar dengan Google"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/bg_button_white_rounded"/>


        <TextView
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:id="@+id/tv_masuk"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Sudah punya akun? Masuk"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>